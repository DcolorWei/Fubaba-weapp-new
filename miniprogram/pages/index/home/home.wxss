.weui-grid__icon {
  width: 102rpx;
  height: 98rpx;
  margin: 0 auto;
}
.weui-grid image {
  display: block;
  width: 100%;
  height: 100%;
}
.weui-grid {
  position: relative;
  float: left;
  padding: 20rpx 20rpx;
  width: 33.33333333%;
  box-sizing: border-box;
}
.weui-grid:after {
  content: ' ';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 2rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  transform-origin: 0 100%;
  transform: scaleY(0.5);
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: rgba(0, 0, 0, 0.9);
  font-size: 26rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.index {
  margin-bottom: 15vh
}
.home-swiper {
  height: 245px;
}

.search-container {
  padding: 8px;
}

.swiper-slide {
  width: 100%;
  height: 245px;
  line-height: 245px;
  text-align: center;
  background-color: #f7f7f7;
}

.swiper-slide> image {
  width: 100%;
  height: 100%;
}
.weui-grids {
  background-color: #fff;
  position: relative;
  display: flex;
  justify-content: space-around;
  overflow: hidden;
}
.weui-panel__hd {
  padding: 16px 16px 13px;
  color: rgba(0, 0, 0, 0.9);
  font-size: 14px;
  font-weight: 700;
  position: relative;
}
.weui-panel__bd {
  padding: 16px 16px 13px;
}
.weui-panel:before {
  content: ' ';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 2rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.weui-panel:after {
  content: ' ';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  transform-origin: 0 100%;
  transform: scaleY(0.5);
}
.weui-panel__hd:after {
  content: ' ';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  transform-origin: 0 100%;
  transform: scaleY(0.5);
  left: 15px;
}
.weui-tabbar:before {
  content: ' ';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid var(--weui-FG-3);
  color: var(--weui-FG-3);
  transform-origin: 0 0;
  transform: scaleY(0.5);
}
.weui-media-box {
  padding: 16px;
  position: relative;
}
.weui-panel {
  background-color: #fff;
  margin-top: 10px;
  position: relative;
  overflow: hidden;
}
.weui-search-bar__form {
  position: relative;
  flex: auto;
}
.weui-search-bar {
  position: relative;
  padding: 4px;
  display: flex;
  box-sizing: border-box;
  /* background-color: @weuiBgColorDefault; */
  -webkit-text-size-adjust: 100%;
  align-items: center;
}
.weui-search-bar__cancel-btn {
  display: block;
}
.weui-search-bar__label {
  display: none;
}

.weui-search-bar__box {
  position: relative;
  /* padding-left: 28px; */
  padding-right: 32px;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__box .weui-search-bar__input {
  padding: 8px 0;
  width: 100%;
  height: 1.14285714em;
  border: 0;
  font-size: 14px;
  line-height: 1.14285714em;
  box-sizing: content-box;
  background: transparent;
  color: rgba(0, 0, 0, 0.9);
  animation: blink 1.5s infinite;
}
/* 文字闪烁 */
@keyframes blink{
  0%{opacity: 1;}
  60%{opacity: 1;}
  61%{opacity: 1;}
  100%{opacity: 1;} 
}


.icon-search:before {
  content: "";
  width: 1px;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #ced1d6;
}


.fubaba-search-bar .search-addon{
  padding-right: 30rpx;
}

.fubaba-search-bar .search-addon .search-channel:before {
  content: "";
  width: 100px;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #ced1d6;
}
.search-channel {
  font-size: 14px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
  white-space: nowrap;
  margin-left: 8px;
  position: relative;
  border: none;

}

.search-city{
  width: 65px;
}

.search-city:before, .search-channel:before {
  content: "";
  width: 1px;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #ced1d6;
}
.search-channel:after {
  content: " ";
  width: 12px;
  height: 24px;
  mask-position: 0 0;
  mask-repeat: no-repeat;
  mask-size: 100%;
  background-color: currentColor;
  mask-image: url(data:image/svg+xml,%3Csvg%20width%3D%2212%22%20height%3D%2224%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M2.454%206.58l1.06-1.06%205.78%205.779a.996.996%200%20010%201.413l-5.78%205.779-1.06-1.061%205.425-5.425-5.425-5.424z%22%20fill%3D%22%23B2B2B2%22%20fill-rule%3D%22evenodd%22%2F%3E%3C%2Fsvg%3E);
  position: absolute;
  top: 50%;
  right: 0px;
  margin-top: -12px;
}
.weui-select {
  min-width: 50px;
  box-sizing: border-box;
  height: auto;
  line-height: normal;
  margin-right: 12px;
  padding-left: 16px;
  padding-right: 16px;
}
