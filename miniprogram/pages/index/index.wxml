<!-- index.wxml -->
<view class="container">
  <van-tabs
    class="show"
    active="{{ active }}"
    animated
  >
    <van-tab>
      <home wx:if="{{active==0}}"></home>
    </van-tab>
    <van-tab>
      <selling wx:if="{{active==1}}"></selling>
    </van-tab>
    <van-tab>
      <user wx:if="{{active==2}}"></user>
    </van-tab>
  </van-tabs>
  <van-tabbar
    active="{{ active }}"
    active-color="#F2843B"
    bind:change="onChange"
  >
    <van-tabbar-item wx:for="{{tarbar}}" wx:key="index">
      <view class="tar-item">
        <van-icon
          style="display:{{active==index?'block':'none'}}"
          size="26px"
          name="/images/tarbar/{{item.icon}}-o.png"
        />
        <van-icon
          style="display:{{active!=index?'block':'none'}}"
          size="26px"
          name="/images/tarbar/{{item.icon}}.png"
        />
        <view>{{item.item}}</view>
      </view>
    </van-tabbar-item>
  </van-tabbar>
</view>

